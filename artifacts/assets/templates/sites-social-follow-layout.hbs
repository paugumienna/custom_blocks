<!-- Sites Social Block Layout -->
<div data-content-item-id="{{ $metadata.id }}" data-wch-editable="{{ $metadata.accessor }}"
  data-acoustic-markup-fragment="{{ @root.$metadata.id }}#{{ $metadata.accessor }}"
  data-wch-selectable="{{ $metadata.id }}#{{ $metadata.accessor }}" style="
    {{~#if margin}} margin:{{{margin.$markup}}}; {{/if~}}
    {{~#if padding}} padding:{{{padding.$markup}}}; {{/if~}}
    {{#if background~}}{{{background.$markup}}}{{~/if}}
  ">
  <div style="
          display: flex;
          {{~#eq alignment.alignmentOptions "left"}} justify-content: flex-start; {{/eq~}}
          {{~#eq alignment.alignmentOptions "center"}} justify-content: center; {{/eq~}}
          {{~#eq alignment.alignmentOptions "right"}} justify-content: flex-end; {{/eq~}}
          {{~#eq elementsAlignment "Horizontal"}} flex-direction: row; {{/eq~}}
          {{~#eq elementsAlignment "Vertical"}} flex-direction: column; {{/eq~}};
        ">
    {{#each socialLinks}}
    <span key="{{@index}}" style="
          {{~#eq @root.elementsAlignment "Vertical"}}
            {{~#unless @first}}
              margin-top:{{@root.spacing}}px;
            {{~/unless~}}
          {{/eq~}}
          {{~#eq @root.elementsAlignment "Horizontal"}}
            {{~#unless @first}}
              margin-left:{{@root.spacing}}px;
            {{~/unless~}}
          {{/eq~}}
          display: flex;
          {{~#eq @root.alignment.alignmentOptions "left"}} justify-content: flex-start; {{/eq~}}
          {{~#eq @root.alignment.alignmentOptions "center"}} justify-content: center; {{/eq~}}
          {{~#eq @root.alignment.alignmentOptions "right"}} justify-content: flex-end; {{/eq~}}
        ">
      <a data-content-item-id="{{@root.$metadata.id}}"
        data-wch-editable="{{ @root.$metadata.accessor }}.values[{{@index}}].linkAdvanced"
        {{~#if @root.openLinksInNewTab }} target="_blank" {{~/if~}} href="{{linkAdvanced.urlLink.url.linkURL}}" class="
    {{~#eq linkColorScheme "Inverse"}} sites-theme-inverse-color{{/eq}}
    ">
        <img data-content-item-id="{{@root.$metadata.id}}"
          data-wch-editable="{{ @root.$metadata.accessor }}.values[{{@index}}].icon" alt="{{altText}}" border="0"
          src="{{@root.$context.hub.resourceUrl.href}}dxauth/social/bw/16/{{altText}}.png" style="margin-right: 5px;">
        {{~#eq @root.socialMediaType "Icon with text"}}{{~#if linkAdvanced.name}}{{linkAdvanced.name}} {{else}}New
        social link{{~/if~}} {{/eq~}} </a>
    </span>
    {{/each}}
  </div>
</div>
<!-- End Sites Social Block Layout -->
