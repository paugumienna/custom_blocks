<!-- My Layout -->
<div data-content-item-id="{{ $metadata.id }}" data-accessor="{{ $metadata.accessor }}"
    data-wch-selectable="{{ $metadata.id }}#{{ $metadata.accessor }}"
    data-acoustic-markup-fragment="{{ @root.$metadata.id }}#{{ $metadata.accessor }}" style="display:flex;   {{{alignment.$markup}}} padding: {{{padding.$markup}}};     justify-content: space-evenly;
    {{~#if background}} background-color: {{{background.backgroundColor.colorCode}}}; {{/if~}}  {{~#if backgroundGradient.includeGradient }}
        {{#eq backgroundGradient.gradientType "Vertical linear gradient"}} background-image:linear-gradient({{backgroundGradient.color1 }},
	    {{backgroundGradient.color2}}) !important; {{/eq~}}
        {{#eq backgroundGradient.gradientType "Horizontal linear gradient"}}
	    background-image: linear-gradient(to right,
        {{backgroundGradient.color1 }}, {{backgroundGradient.color2}}) !important; {{/eq~}}
	    {{#eq backgroundGradient.gradientType "Radial gradient"}}
        background-image: radial-gradient({{backgroundGradient.color1 }},
	{{backgroundGradient.color2}}) !important; {{/eq~}}
    {{~/if~}}
    {{~#if background.includeBackgroundImage}}
    background-image: url({{$context.hub.resourceUrl.origin}}{{background.image.renditions.default.url}});{{/if}}
    {{#eq background.fillOptions 'center'}}
        background-size: contain;
        background-repeat: no-repeat;
        background-position:center;{{/eq}}
        {{#eq background.fillOptions 'tile'}}
        background-repeat: repeat;
        background-size: contain;{{/eq}}
        {{#eq background.fillOptions 'full-width'}}
        background-size: cover;
        background-repeat: no-repeat;{{/eq}}">
    <div style="{{textStyle.textStyle.$markup}} padding:{{textStyle.padding.$markup}}; width:46%">
        <p style="font-size:larger !important; margin:5px;">
            {{label}}</p>
        <hr>
        <p>{{text}}</p>
        <a style="background-color: {{buttonColor.colorCode}};border:none;padding:{{paddingButton.$markup}}; color:{{buttonTextColor.colorCode}}"
            href="{{{URL}}}">{{buttonLabel}}</a>
    </div>
    <img src="{{image.url}}" alt="alt text" style="align-self: center;">
</div>
{{log .}}
<!-- End My Layout -->